doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='csrf-token', content=_csrf)
    meta(name='author', content='')
    title #{title} | PrimerPeso
    link(rel='stylesheet', href=CDN('/css/styles.css'))
    link(rel='shortcut icon', href='/favicon.ico', type='image/x-icon')
    link(rel='icon', href='/favicon.ico', type='image/x-icon')
  body(class=bodyClass)
    #wrap
      include partials/navigation
      .container
        include partials/flash
        block content

    include partials/footer
    // This should be dynamically controlled.
    // Set a column variable for all JSON dumps out.
    if formInfo
      script.
        var formInfo = !{JSON.stringify(formInfo)}

    if searchResult
      script.
        var searchResult = !{JSON.stringify(searchResult)}

    script(type='text/javascript', src=CDN('/js/vendor.min.js'))
    script(type='text/javascript', src=CDN('/js/main.js'))
    include partials/analytics.jade
